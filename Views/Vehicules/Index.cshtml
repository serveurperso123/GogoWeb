@using GogoWeb.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<GogoWebUser> SignInManager
@inject UserManager<GogoWebUser> UserManager

@model IEnumerable<GogoDriverWeb.Models.Vehicule>

@{
    ViewData["Title"] = "Index";
}


<div class="pagetitle">
    <h1>Les vehicules</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a asp-action="Index">Index</a></li>
            <li class="breadcrumb-item">Les vehicules</li>
            <li class="breadcrumb-item active">Liste</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Chauffeur"))
{
    <p>
        <a asp-action="Create">Nouveau</a>
    </p>
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Liste vehicule</h5>

                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NomVehicule)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Immatriculation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Couleur)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Assurance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NumeroChassis)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Marque)
                                </th>
                              @*  <th>
                                    @Html.DisplayNameFor(model => model.TypeReservationIdNavigation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TypevehiculeIdNavigation)
                                </th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomVehicule)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Immatriculation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Couleur)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Assurance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumeroChassis)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Marque)
                                    </td>
                                  @*  <td>
                                        @Html.DisplayFor(modelItem => item.TypeReservationIdNavigation.TypeReservationId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TypevehiculeIdNavigation.TypevehiculeId)
                                    </td>*@
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.VehiculeId"><i class="fa fa-edit" aria-hidden="true"></i></a> |
                                        <a asp-action="Details" asp-route-id="@item.VehiculeId"><i class="fa fa-list" aria-hidden="true"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.VehiculeId"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>

        </div>
    </div>
</section>
